<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference android:title="Email"
        android:key="email"
        android:summary="Please provide your email."/>
    <EditTextPreference android:title="Password"
        android:key="password"
        android:summary="Please provide your password."
        android:password="true"/>
    <ListPreference android:title="Test Size"
        android:summary="Select the size of data test file to use."
        android:key="testSize"
        android:numeric="integer"
        android:defaultValue="10"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues" />
    <EditTextPreference android:title="Frequency"
        android:key="frequency"
        android:summary="Input the frequency of testing in minutes."
        android:numeric="integer"
        android:defaultValue="10"/>
</PreferenceScreen>